.videosplitter{
  width:420px;
  float:left;
}

.videosplitter .master {
  width:420px;
  height:340px;
  float:left;
  background:#000;
}
.videosplitter .preview {
  width:420px;
  height:340px;
  float:left;
  margin-left:0px;
  background:#000;
}

/* Start: markers */
div.mejs-markers-off,div.mejs-markers-on{
  width:25px !important;
}

.mejs-controls .mejs-markIn-button.mejs-markers-off button{
  background-position: -130px -16px;
}


.mejs-controls .mejs-markOut-button.mejs-markers-off button{
  background-position: -142px -16px;
}

.mejs-controls .mejs-markIn-button.mejs-markers-on button{
  background-position: -130px 0px;
}

.mejs-controls .mejs-markOut-button.mejs-markers-on button{
  background-position: -142px 0px;
}

/* End: markers */

.mejs-controls .mejs-breakLine{
  width:1px !important;
  clear:left !important;
}


.mejs-container .mejs-controls .mejs-time-in, .mejs-container .mejs-controls .mejs-time-out {
  color: #666;
  display: block;
  height: 17px;
  width: auto;
  padding: 8px 3px 0 3px ;
  overflow: hidden;
  text-align: center;
  padding: auto 4px;
}
.mejs-container .mejs-controls .mejs-time-in span, .mejs-container .mejs-controls .mejs-time-out span {
  font-size: 11px;
  color: #666;
  line-height: 12px;
  display: block;
  float: left;
  margin: 0px 0px 0 0;
  width: auto;
}

div.clear{
  clear:both;
}




